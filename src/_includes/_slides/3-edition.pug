  mixin pr_check(title, description, border_class)
      .flex-row.flex.border-gray-4(class=border_class)
        //- Check
        .flex.flex-col.py-2.px-4
          .bg-teal-5.rounded-100p.flex.flex-col.flex-center.p-1
            .h-6.w-6.white.fill-current!=include("assets/svg/check.svg")
        //- Name
        .flex.flex-col.flex-main-center.flex-auto.my-3
          .bold.text-2=title
          .gray-7.text-1=description

  //- BEST PRACTICE AS CODE
  +slide
    +title.teal-5 Similar best practices as in code
    .flex.flex-row.h-100p.flex-center
      .flex.flex-row.w-80p
        //- Merge icon
        .flex-none.px-2
          .bg-gray.p-2.rounded-4
            .h-7.w-7.white.fill-current!=include("assets/svg/merge.svg")
        //- List of checks
        .flex-auto.helvetica
          .border-001.border-gray-4.rounded-4.flex.flex-col
            +pr_check("Linting", "Grammar, typos, capitalization, links, etc.", "border-b-001")
            +pr_check("Peer Review", "Share the GDoc with coworker, with suggestion rights.", "border-b-001")
            +pr_check("Refactoring", "Remove words, sentences and paragraphs.")


