block content
        
  //- 3 Actes
  mixin actes(start, middle, end)
    +slide
      .flex.flex-row.h-100p
        .flex-none.w-25p.bg-no-repeat.bg-cover.bg-center(style="background-image: url(./assets/fairytale.jpg)")
        .flex-none.w-75p.flex.flex-row
          .flex.flex-auto.flex-col
            +title Une histoire en trois actes
            .flex-auto.flex.flex-col.flex-center.p-3
              .flex.flex-row.w-100p.h-10.rounded.overflow-hidden
                .flex-none.w-25p.bg-blue-4.flex.flex-center.white
                  div=start
                .flex-auto.w-50p.bg-blue-5.flex-center.flex.white
                  div=middle
                .flex-none.w-25p.bg-blue-7.flex.flex-center.white
                  div=end

  +actes("Début", "Milieu", "Fin")
  +actes("Mise en place", "Confrontation", "Résolution")

  //- JOSS WHEDON
  +slide
    .flex.flex-row.h-100p
      .flex-none.w-60p.flex.flex-center.flex-col
        .flex-col
          .text-5.text-left.lh-tight.bold.text-shadow.text-shadow-gray.gray-8 
            div Un auteur gagne sa vie
            div en #[.inline.blue.text-shadow créant] des #[.inline.blue.text-shadow conflits].
          .text-3.gray-6.mt-4 — Joss Whedon
      .flex-none.w-40p.h-100p.bg-cover.bg-no-repeat.bg-center(style="background-image:url(./assets/whedon.jpg")

